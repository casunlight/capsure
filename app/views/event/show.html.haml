.row.fluid
  .span12
    %h1 
      #{@event.name}
      %small 
        %br
        %a{:href => "/calendar/#{@calendar.id}"}
          District #{@calendar.id}
    %hr

.row.fluid
  .span8
    %h3
      = @event.start_date_formatted

    %p.lead 
      = @event.details

    - unless @event.contact_details == ''
      %h4 Contact
      = @event.contact_details

  .span4
    .well
      %h4 Location
      = @event.location

    .well
      %h4 Add to my calendar
      %a{ :href => "#{@event.id}/ical.ics" } iCal / Outlook
      %br
      %a{ :href => "http://www.google.com/calendar/event?action=TEMPLATE&text=#{@event.name}&dates=#{@event.start_date_cal}/#{@event.end_date_cal}&details=#{@event.details}&location=#{@event.location}&trp=false&sprop=Capsure&sprop=name:http://capsure.herokuapp.com" } Google Calendar
