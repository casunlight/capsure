%h1 District #{@calendar.id} CAPS meetings
%hr

%dl.dl-horizontal
  - @events.each do |event|
    %dt
      %h4
        = event.start_date_formatted
    %dd
      %h4
        %a{:href => "/calendar/#{@calendar.id}/#{event.id}"}
          = event.name
    %dd= event.details
    %dd
      %strong Location:
      = event.location
    %dd
      %strong Contact:
      = event.contact_details
